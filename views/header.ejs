     <header>
      <img class="logo-min" src="../images/breeze-min.png">
       <div class="basic-login">
        <% if (user) { %>

        <span><img src="../images/write.png"><a href="/archive">存档</a></span>
        <span><img src="../images/write.png"><a href="/post">写文章</a></span>
        <span><img src="../images/logout.png"><a href="/logout">登出</a></span>
        <span><form action="/search" method="GET"><input type="text" name="keyword" placeholder="SEARCH" class="search"></form></span>
         
        <% } else { %> 
         <span><img src="../images/login.png"><a href="/login">登陆</a></span>
        <span><img src="../images/regis.png"><a href="/reg">注册</a></span>
        <%  } %>
